package com.abhi.serviceImpl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.abhi.exceptions.PatientNotFoundException;
import com.abhi.model.Doctor;
import com.abhi.model.Patient;
import com.abhi.repository.DoctorRepository;
import com.abhi.repository.PatientRepository;
import com.abhi.service.PatientService;
import com.abhi.utility.Symptom;

@Service
public class PatientServiceImpl implements PatientService {

	@Autowired PatientRepository patientRepository;
	@Autowired DoctorRepository doctorRepository;
	
	@Override
	public void savePatient(Patient patient) {
		patientRepository.save(patient);
	}

	@Override
	public List<Doctor> DoctorListofPatientSymptom(int pid) {
	
		Patient patient=patientRepository.findById(pid).orElse(null);
		if (patient==null) {
			throw new PatientNotFoundException("Patient with id "+pid+" not found.");
		}
		String city=patient.getCity();
		if(!(city.equals("Delhi") || city.equals("Noida") || city.equals("Faridabad")) ) {
			throw new RuntimeException("We are working to expand Our service !");
		}
		
		String symptom=patient.getSymptom();//Dysmenorrhea
		String speciality=Symptom.map.get(symptom);//Gynocology//city=Faridabad
		List<Doctor> doctorList=doctorRepository.getDoctorListByCityAndSpeciality(city,speciality);
		if (doctorList==null) {
			throw new RuntimeException("There is Not Any doctor available in your city or based on Symptop "
					+ "Sorry for the incovenience !");
		}
		for(Doctor d:doctorList) {
			System.out.println(d);
		}
		
		return doctorList;
	}

}
